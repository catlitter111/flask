/* pages/rfid/rfid.wxss - RFID实时监控页面样式 */

/* 页面容器 */
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #ECEFF1 0%, #CFD8DC 100%);
    padding-bottom: 120rpx; /* 为底部栏留空间 */
  }
  
  /* 实时状态面板 */
  .status-panel {
    margin: 20rpx;
    background: white;
    border-radius: 32rpx;
    box-shadow: 0 4rpx 24rpx rgba(33, 150, 243, 0.15);
    overflow: hidden;
  }
  
  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 32rpx;
    background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  }
  
  .panel-title {
    font-size: 28rpx;
    font-weight: 600;
    color: white;
  }
  
  .status-indicator {
    display: flex;
    align-items: center;
    gap: 12rpx;
  }
  
  .status-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: #f44336;
  }
  
  .status-indicator.scanning .status-dot {
    background-color: #4CAF50;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .status-text {
    font-size: 24rpx;
    color: white;
  }
  
  .status-content {
    padding: 32rpx;
  }
  
  .status-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24rpx;
  }
  
  .status-row:last-child {
    margin-bottom: 0;
  }
  
  .status-item {
    display: flex;
    align-items: center;
    flex: 1;
  }
  
  .status-label {
    font-size: 24rpx;
    color: #666;
    margin-right: 8rpx;
  }
  
  .status-value {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }
  
  .status-value.connected {
    color: #2196F3;
  }
  
  .status-value.disconnected {
    color: #f44336;
  }
  
  .status-value.highlight {
    color: #4CAF50;
    font-weight: 600;
  }
  
  /* 控制按钮区 */
  .control-section {
    display: flex;
    gap: 20rpx;
    margin: 0 20rpx 20rpx;
  }
  
  .control-btn {
    flex: 1;
    height: 160rpx;
    background: white;
    border-radius: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
    border: none;
    padding: 0;
    transition: all 0.3s ease;
  }
  
  .control-btn:active {
    transform: scale(0.95);
  }
  
  .control-btn.start {
    background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  }
  
  .control-btn.stop {
    background: linear-gradient(135deg, #f44336 0%, #da190b 100%);
  }
  
  .control-btn.clear {
    background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  }
  
  .btn-title {
    font-size: 32rpx;
    font-weight: 600;
    color: white;
    margin-bottom: 8rpx;
  }
  
  .btn-subtitle {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.9);
  }
  
  /* 天线选择区 */
  .antenna-section {
    margin: 0 20rpx 20rpx;
    background: white;
    border-radius: 32rpx;
    padding: 32rpx;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  }
  
  .section-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 24rpx;
  }
  
  .antenna-selector {
    display: flex;
    gap: 20rpx;
  }
  
  .antenna-item {
    flex: 1;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16rpx;
    background: #f5f5f5;
    border: 2rpx solid transparent;
    font-size: 28rpx;
    color: #666;
    transition: all 0.3s ease;
  }
  
  .antenna-item.active {
    background: #E3F2FD;
    border-color: #2196F3;
    color: #2196F3;
    font-weight: 600;
  }
  
  /* 实时数据显示区 */
  .realtime-data {
    margin: 0 20rpx 20rpx;
    background: white;
    border-radius: 32rpx;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }
  
  .data-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 32rpx;
    background: #37474F;
  }
  
  .data-title {
    font-size: 28rpx;
    font-weight: 600;
    color: white;
  }
  
  .data-status {
    display: flex;
    align-items: center;
    gap: 8rpx;
    font-size: 24rpx;
    color: #4CAF50;
  }
  
  .live-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #4CAF50;
    animation: blink 1.5s infinite;
  }
  
  @keyframes blink {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }
  
  .data-grid {
    display: flex;
    padding: 20rpx;
    gap: 20rpx;
  }
  
  .data-card {
    flex: 1;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 16rpx;
    padding: 24rpx;
    text-align: center;
  }
  
  .data-card:nth-child(1) {
    background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  }
  
  .data-card:nth-child(2) {
    background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  }
  
  .data-card:nth-child(3) {
    background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  }
  
  .card-value {
    display: block;
    font-size: 48rpx;
    font-weight: 700;
    color: #1565C0;
    line-height: 1;
    margin-bottom: 12rpx;
  }
  
  .data-card:nth-child(2) .card-value {
    color: #2E7D32;
  }
  
  .data-card:nth-child(3) .card-value {
    color: #E65100;
  }
  
  .card-label {
    display: block;
    font-size: 24rpx;
    color: #666;
    margin-bottom: 8rpx;
  }
  
  .card-hint {
    display: block;
    font-size: 20rpx;
    color: #999;
    height: 24rpx;
  }
  
  /* 标签列表 */
  .tag-list-section {
    margin: 0 20rpx;
    background: white;
    border-radius: 32rpx 32rpx 0 0;
    box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 32rpx;
    background: #2c3e50;
    border-radius: 32rpx 32rpx 0 0;
  }
  
  .list-title {
    font-size: 28rpx;
    font-weight: 600;
    color: white;
  }
  
  .list-count {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .tag-list {
    flex: 1;
    padding: 20rpx;
    max-height: 600rpx;
  }
  
  .tag-item {
    display: flex;
    align-items: center;
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    border: 1rpx solid #E3F2FD;
    transition: all 0.3s ease;
  }
  
  .tag-item:active {
    background: #E3F2FD;
    transform: scale(0.98);
  }
  
  .tag-indicator {
    width: 8rpx;
    height: 60rpx;
    background: #2196F3;
    border-radius: 4rpx;
    margin-right: 20rpx;
  }
  
  .tag-content {
    flex: 1;
  }
  
  .tag-epc {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    font-family: 'Courier New', monospace;
    margin-bottom: 8rpx;
  }
  
  .tag-info {
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: #666;
  }
  
  .info-item {
    margin-right: 8rpx;
  }
  
  .info-separator {
    margin: 0 8rpx;
    color: #ddd;
  }
  
  .tag-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8rpx;
  }
  
  .tag-time {
    font-size: 22rpx;
    color: #999;
  }
  
  .tag-status {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    background: #f5f5f5;
    color: #999;
  }
  
  .tag-status.active {
    background: #E8F5E9;
    color: #4CAF50;
    font-weight: 500;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 40rpx;
    text-align: center;
  }
  
  .empty-icon {
    font-size: 80rpx;
    margin-bottom: 24rpx;
    opacity: 0.6;
  }
  
  .empty-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    margin-bottom: 16rpx;
  }
  
  .empty-desc {
    font-size: 26rpx;
    color: #999;
    line-height: 1.5;
  }
  
  /* 底部操作栏 */
  .bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background: white;
    box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
    display: flex;
    padding: 0 20rpx;
    z-index: 100;
  }
  
  .bottom-btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    padding: 0;
    font-size: 24rpx;
    color: #666;
    transition: all 0.3s ease;
  }
  
  .bottom-btn:active {
    background: #f5f5f5;
    color: #2196F3;
  }
  
  .btn-icon {
    font-size: 32rpx;
    margin-bottom: 4rpx;
  }