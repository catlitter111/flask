{
    "pages": [
      "pages/control/control",
      "pages/history/history",
      "pages/feature/feature",
      "pages/feature/detail/detail",
      "pages/assistant/assistant"
    ],
    "window": {
      "navigationBarTextStyle": "white",
      "navigationBarTitleText": "机器人伴侣",
      "navigationBarBackgroundColor": "#007ACC",
      "navigationStyle": "default",
      "backgroundColor": "#f6f8fc",
      "backgroundTextStyle": "light",
      "enablePullDownRefresh": false
    },
    "tabBar": {
      "color": "#95a5a6",
      "selectedColor": "#007ACC",
      "backgroundColor": "#ffffff",
      "borderStyle": "white",
      "list": [
        {
          "pagePath": "pages/control/control",
          "text": "伴侣控制",
          "iconPath": "images/control.png",
          "selectedIconPath": "images/control-active.png"
        },
        {
          "pagePath": "pages/history/history", 
          "text": "陪伴历史",
          "iconPath": "images/history.png",
          "selectedIconPath": "images/history-active.png"
        },
        {
          "pagePath": "pages/feature/feature",
          "text": "特征识别", 
          "iconPath": "images/feature.png",
          "selectedIconPath": "images/feature-active.png"
        },
        {
          "pagePath": "pages/assistant/assistant",
          "text": "AI伴侣",
          "iconPath": "images/assistant.png",
          "selectedIconPath": "images/assistant-active.png"
        }
      ]
    },
    "permission": {
      "scope.userLocation": {
        "desc": "需要获取您的地理位置以记录机器人伴侣的陪伴轨迹"
      },
      "scope.camera": {
        "desc": "需要使用相机进行人脸识别和伴侣交互功能"
      },
      "scope.writePhotosAlbum": {
        "desc": "需要访问相册保存陪伴记录和互动照片"
      },
      "scope.record": {
        "desc": "需要录音权限以进行语音交互和陪伴对话"
      }
    },
    "networkTimeout": {
      "request": 15000,
      "downloadFile": 15000,
      "connectSocket": 10000,
      "uploadFile": 30000
    },
    "style": "v2",
    "componentFramework": "glass-easel",
    "sitemapLocation": "sitemap.json",
    "lazyCodeLoading": "requiredComponents",
    "requiredBackgroundModes": [
      "location",
      "backgroundFetch"
    ],
    "requiredPrivateInfos": [
      "getLocation",
      "chooseLocation",
      "startLocationUpdate",
      "startLocationUpdateBackground"
    ],
    "usingComponents": {}
  }